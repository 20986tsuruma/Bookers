<header>
	<h1>Books</h1>
</header>


<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Body</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
		<tr>
			<td><%= book.title %></td>
			<td><%= book.body %></td>
			<td>
				<%= link_to "show", book_path(book.id) %>
				<%= link_to "edit", edit_book_path(book.id) %>
				<%= link_to "destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>

<h2>New book</h2>
<%= form_for(@book) do |f| %>
    <% if @book.errors.any? %>
      <h3><%= @book.errors.count %>errors prohibited this book from being saved:</h3>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
	<label>Title</label>
	<br><%= f.text_field :title %></br>
	<br>
    <label>Body</label>
	<br><%= f.text_area :body %></br>
	<br><%= f.submit "Create Book" %></br>
<% end %>